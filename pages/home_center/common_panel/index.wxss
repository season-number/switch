/* miniprogram/pages/home_center/common_panel/index.js.wxss */

.common-panel-backgroud {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
	height: 320px;
  background-color: #27c3d9;
  z-index: 0;
}

.common-panel-header {
  z-index: 1;
  width: 100%;
  height: 256px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.common-panel-header-block {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.common-panel-header-dpName {
	width: 160px;
  height: 25px;
  text-align: center;
	font-family: HelveticaNeue;
	font-size: 12px;
  line-height: 24px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
	color: #fff;
}

.common-panel-header-dpValue {
	width: 114px;
	height: 75px;
  font-family: DINCondensed-Bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
	font-size: 74px;
	color: #fff;
}

.roDpItem-normal {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 54px;
  padding: 16px 2px;
}

.roDpItem-normal:not(:last-child) {
  border-right: solid 1px #d6d6d6;
}

.roDpItem-two {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 54px;
  padding: 16px 33px;
}

.roDpItem-two:not(:last-child) {
  border-right: solid 1px #d6d6d6;
}

.roDpItem-one {
  display: flex;
  align-items: center;
  flex: 1;
  height: 64px;
  padding: 20px 24px;
  background-color: #fff;
  border-radius: 14px;
}

.roDpItem-dpName {
  flex: 1;
  width: 115px;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  line-height: 24px;
  color: rgba(80, 80, 80, 0.5);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.roDpItem-status {
  width: 115px;
  text-align: center;
  font-family: PingFangSC-Semibold;
  font-size: 18px;
  line-height: 24px;
  color: #505050;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.statuslist {
  padding-top: 16px;
  display: flex;
  justify-content: center;
  line-height: 12px;
  flex-wrap: wrap;
}

.scroll-view {
  padding: 16px 8px;
  width: auto;
  height: 100%;
  z-index: 10;
}
.switch{
  height: 400rpx;
  width: 400rpx;
  background-color: #fff;
  z-index: 100;
  border: none;
  margin: 200rpx auto 0;
  background-color: #fff;
  font-size: 40px;
  cursor: pointer;
/*   border: 5px solid transparent; */
  box-sizing:border-box;
  background-image: linear-gradient(#fff,rgb(226, 226, 226)),linear-gradient(to bottom right,  #0fd850, #f9f047);
  font-weight: 300;
  color: #2fd830;
  padding: 2px;
  border-radius: 100px;
  background-clip: content-box,padding-box;
  transition: filter .5s ease;
  text-align: center;
  line-height: 400rpx;
/* 
  border-image: -moz-linear-gradient(#F80, #2ED) 20 20;

  border-image: -o-linear-gradient(#F80, #2ED) 20 20;

  border-image: linear-gradient(#F80, #2ED) 20 20; */
}
.switch-btn{
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  line-height: 1;
}
.switch-border{
  z-index: 10;
  width: 150rpx;
  height: 80rpx;
  background-color: #fff;
  border: 1px solid #d2d2d2;
  border-radius: 40rpx;
  display: flex;
}
.switch-border.open{
  justify-content: flex-end;
}
.switch-radius{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  box-shadow: var(--switch-node-box-shadow,0 3px 1px 0 rgba(0,0,0,.05),0 2px 2px 0 rgba(0,0,0,.1),0 3px 3px 0 rgba(0,0,0,.05));
  background-color: #fff;
  border: 2rpx solid #50505021;
  box-sizing: border-box;
}
.tips{
  margin-top: 14rpx;
  text-align: center;
  color: #698147;
  z-index: 100;
}